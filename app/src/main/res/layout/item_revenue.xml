<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_padding"
    android:layout_marginStart="@dimen/activity_padding"
    android:layout_marginTop="@dimen/activity_padding"
    app:cardCornerRadius="@dimen/activity_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingStart="@dimen/activity_padding"
            android:paddingTop="5dp"
            tools:ignore="RtlSymmetry">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/revenueNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="James Camereon"
                />


            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/revenueDescriptionTV"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/revenue_description"
                tools:text="News paper bill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_padding"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_access_time_black_24dp" />


                <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/revenueRecurrenceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_padding"
                    android:textColor="@color/recurrence"
                    android:textSize="12sp"
                    tools:text="monthly"
                    android:paddingStart="@dimen/activity_padding" />


            </LinearLayout>


        </LinearLayout>

        <TextView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/revenueAmountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingEnd="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:paddingTop="@dimen/activity_padding"
            android:textColor="@color/revenue_title_orange"
            tools:text="$200.00"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/revenueAmountTV"
            android:paddingEnd="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding"
            android:paddingTop="5dp"
            android:src="@drawable/ic_error_outline_black_24dp"
            tools:ignore="RtlSymmetry" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

